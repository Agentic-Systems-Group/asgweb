---
import BaseLayout from "../layouts/BaseLayout.astro";
export const prerender = true;
const title = "Agentic Systems Group — agentic systems that think and verify";
const description = "We build research-grade agentic systems for enterprises. Mneme delivers deep research on your private corpora without naive RAG.";
---
<BaseLayout {title} {description}>
  <section class="hero">
    <h1>Agentic Systems Group</h1>
    <p class="tagline">Research-grade agentic systems. Minimal surface area. Maximum rigor.</p>
    <div class="cta">
      <a class="button" href="/mneme">Explore Mneme</a>
      <a class="link" href="/research">Research</a>
    </div>
  </section>

  <section class="grid">
    <div class="card">
      <h2>Mneme</h2>
      <p>Enterprise agentic search—beyond naïve RAG. Multi-hop reasoning over files and structured citations designed for legal, finance, and consulting workflows.</p>
      <a href="/mneme">Learn more →</a>
    </div>
    <div class="card">
      <h2>Research</h2>
      <p>Benchmarks and methods for robust agentic behavior—including NuanceBench and long-horizon simulation work.</p>
      <a href="/research">See research →</a>
    </div>
    <div class="card">
      <h2>CivSim</h2>
      <p>Long-horizon, multi-agent civic simulation exploring emergent institutions and constraints. Working title; in active design.</p>
      <a href="/civsim">Preview →</a>
    </div>
  </section>
</BaseLayout>
