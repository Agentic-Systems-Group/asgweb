---
import BaseLayout from "../layouts/BaseLayout.astro";
export const prerender = true;
const title = "CivSim — Long-horizon Multi-agent Simulation";
const description = "CivSim explores emergent civic institutions and constraints via long-horizon, multi-agent simulation.";
---
<BaseLayout {title} {description}>
  <section class="section">
    <div class="kicker">Program</div>
    <h1>CivSim</h1>
    <p class="lead">
      Working title for our long-horizon, multi-agent civic simulation. We’re investigating how institutions emerge, how constraints shape behavior, and which interventions actually matter.
    </p>
  </section>

  <section class="section">
    <h2>Status</h2>
    <p>Active design and prototyping. Updates will be posted on the Research page.</p>
  </section>
</BaseLayout>
